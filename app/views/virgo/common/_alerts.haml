-if flash and flash[:notice].present?
  .container-fluid.alert-container
    .row.alert-row.fade.in
      .col-md-12
        .alert.alert-success.flash
          %a{:class => 'close', :data => {:dismiss => 'alert', :target => ".alert-row"}}
            &times;
          .inner-text
            =flash[:notice]

-if flash and flash[:alert].present?
  .container-fluid.alert-container
    .row.alert-row.fade.in
      .col-md-12
        .alert.alert-danger.flash
          %a{:class => 'close', :data => {:dismiss => 'alert', :target => ".alert-row"}}
            &times;
          .inner-text
            =flash[:alert]

-if flash and flash[:warning].present?
