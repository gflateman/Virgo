- @_current_layout ||= 'application'
- body_classes = @_current_layout.split(' ').map{|name| "layout-#{name}"}.join(" ")
!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}

    %meta{:content => "Van Winkle's", :property => "og:site_name"}
    %meta{:content => "website", :property => "og:type"}

    - if Rails.env.development?
      :javascript
        window.testmode = true

    :javascript
      window.app_env = "#{Rails.env.to_s}";

    - if content_for?(:title)
      %title #{decode_html_entities(yield(:title))}
    - else
      %title= t('site_name')

    - if content_for?(:description)
      %meta{:content => yield(:description), :name => "description"}
    - else
      %meta{:content => t('site_description'), :name => "description"}

    %link{rel: "shortcut icon", href: "/favicon.ico"}

    - if content_for?(:sharing_meta)
      = yield :sharing_meta
    - else
      %meta{:content => "#{image_url 'common/vw-social.jpg'}", :property => "og:image"}

    = auto_discovery_link_tag(:rss, feed_url)
    = render '/platform/common/fonts'
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = render '/platform/common/header_analytics'
    :coffee
      window.page_url = "#{page_url}";

    - if content_for? :head
      = yield :head

  %body{class: "#{body_classes} #{params[:controller].split('/').join(' ')} #{params[:action]}#{' admin-user' if admin_access?}"}
    #wrap
      -# render 'common/navbar'
      = render '/platform/common/user_vars'
      = render '/platform/common/admin_navbar'
      = render '/platform/common/public_nav'

      #main
        - if content_for? :content
          = yield :content
        - else
          = yield

    = render '/platform/common/footer'

    = yield :end_of_body
