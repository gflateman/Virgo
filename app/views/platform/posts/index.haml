- content_for :title do
  = "Latest Posts | #{site.name}"

- cache [site_key, page_param] do
  .latest-posts-page
    .container.posts-container.latest-posts-wrap
      .row
        .col-lg-8.col-lg-offset-2
          - @posts.each do |post|
            = render '/platform/posts/post_short', post: post

          - # for performance reasons we want to do this redirection to the
          - # installer from here rather than within a before_action filter
          - if @posts.empty? && Platform::User.all.empty? && !Rails.env.test?
            %meta{"http-equiv" => "refresh", "content" => "0; url=install"}


    .pagination-wrap
      = paginate @posts

- content_for :end_of_body do
  = render '/platform/common/disqus_comment_count'
