- classes = local_assigns.has_key?(:classes) ? classes : nil

- if post
  .post-thumb-box{class: classes}
    %a.post-thumb-box-img{style: "background-image: url('#{post.thumb_image.try(:image).try(:url, :med_thumb)}');", href: post_detail_path(post)}
      = post_tag post
    .post-thumb-text
      %a.post-thumb-headline.headline{href: post_detail_path(post)}= post.headline
      .author-info
        = post_byline post
      = featured_post_text post


