%html
  %head
    %meta{:charset => "utf-8"}
      / Always force latest IE rendering engine or request Chrome Frame
      %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        / Use title if it's in the page YAML frontmatter
        %title= current_page.data.title || "Virgo CMS"
        = stylesheet_link_tag '//fonts.googleapis.com/css?family=Lato:300,400,700,900,300italic,400italic,700italic,900italic'
        = stylesheet_link_tag "all"
        = javascript_include_tag  "all"
  %body{:class => page_classes}
    - if content_for? :before_container
      = yield_content :before_container

    .container.main-container
      = yield
